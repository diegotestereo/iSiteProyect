<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="2dp"
    android:background="@drawable/fondo"
    android:orientation="vertical"
    android:padding="5dp" >

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Apuntamiento de Antena"
        android:textColor="@color/blanco"
        android:textSize="23dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:gravity="center" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" 
             android:gravity="center">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sat"
                android:textColor="@color/amarillo"
                android:textSize="20dp" />

            <Spinner
                android:id="@+id/SpinSatelites"
                android:layout_width="88dp"
                android:layout_height="88dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
             android:gravity="center" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lat"
                android:textColor="@color/amarillo"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/EditLat"
                android:layout_width="73dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.36"
                android:ems="10"
                android:inputType="numberSigned|numberDecimal"
                android:text="0"
                android:textColor="@color/blanco" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" 
             android:gravity="center">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Long"
                android:textColor="@color/amarillo"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/EditLong"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.08"
                android:ems="10"
                android:inputType="numberSigned|numberDecimal"
                android:text="0"
                android:textColor="@color/blanco" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
             android:gravity="center" >

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Offset Ant"
                android:textColor="@color/amarillo"
                android:textSize="20dp" />

            <Spinner
                android:id="@+id/Spin_Offset"
                android:layout_width="70dp"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" >

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Azimuth: "
                android:textColor="@color/amarillo"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/Text_Azimuth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textColor="@color/blanco"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" >

            <TextView
                android:id="@+id/TextView02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Elevación:"
                android:textColor="@color/amarillo"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/Text_Elevacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textColor="@color/blanco"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" >

            <TextView
                android:id="@+id/TextView04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Polarizador:"
                android:textColor="@color/amarillo"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/Text_Polarizador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textColor="@color/blanco"
                android:textSize="20dp" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_GeoLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selectorboton"
        android:text="Obtener Posición y calcular" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Sensores del Telefono"
        android:textColor="@color/blanco"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Acelerometro" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Posicion:"
            android:textColor="@color/amarillo"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/Text_Posicion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="----" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Brujula:" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Norte:"
            android:textColor="@color/amarillo"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="----" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_Calcular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selectorboton"
        android:text="Calculo manual" />

    <TextView
        android:id="@+id/textPrueba"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="           " />

    <Button
        android:id="@+id/btn_Bluetooth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selectorboton"
        android:text="Conectar Modulo Bluetooth" />

    <EditText
        android:id="@+id/EditSat"
        android:layout_width="62dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.60"
        android:ems="10"
        android:inputType="numberSigned|numberDecimal"
        android:text="0"
        android:textColor="@color/blanco" />

</LinearLayout>