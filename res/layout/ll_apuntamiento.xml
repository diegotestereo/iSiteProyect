<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seleccione Satélite"
        android:textSize="23dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Satelite"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/EditSat"
            android:layout_width="62dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.60"
            android:ems="10"
            android:inputType="numberSigned|numberDecimal"
            android:text="-72.0" >

            <requestFocus />
        </EditText>

        <Spinner
            android:id="@+id/spinSAT"
            android:layout_width="93dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Latitud"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/EditLat"
            android:layout_width="73dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.36"
            android:ems="10"
            android:inputType="numberSigned|numberDecimal"
            android:text="-37.87" />

        <Spinner
            android:id="@+id/Spinner01"
            android:layout_width="91dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Longitud"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/EditLong"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.08"
            android:ems="10"
            android:inputType="numberSigned|numberDecimal"
            android:text="-58.08" />

        <Spinner
            android:id="@+id/Spinner02"
            android:layout_width="85dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_GeoLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Obtener Posición" />

    <Button
        android:id="@+id/btn_Calcular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calcular" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Azimuth: "
                android:textSize="20dp" />

            <TextView
                android:id="@+id/Text_Azimuth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/TextView02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Elevación:"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/Text_Elevacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/TextView04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Polarizador:"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/Text_Polarizador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_Bluetooth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Conectar Modulo Bluetooth" />

    <TextView
        android:id="@+id/textPrueba"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView" />

</LinearLayout>